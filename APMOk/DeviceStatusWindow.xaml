<Window
    x:Class="APMOk.DeviceStatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APMOk"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DeviceStatusWindow"
    Width="800"
    Height="450"
    Loaded="WindowLoaded"
    mc:Ignorable="d">
    <Window.Resources>
        <CollectionViewSource x:Key="DriveStatusViewSource" CollectionViewType="ListCollectionView" />
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <ComboBox
                Width="300"
                Margin="15"
                HorizontalAlignment="Left"
                DataContext="{StaticResource DriveStatusViewSource}"
                ItemsSource="{Binding Path=Caption}" />
            <GroupBox Margin="5" Header="Drive Status">
                <DataGrid
                    x:Name="DriveStatusGrid"
                    Margin="5"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    DataContext="{StaticResource DriveStatusViewSource}"
                    ItemsSource="{Binding}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                    <DataGrid.Columns>
                        <DataGridTextColumn />
                        <DataGridTextColumn />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
