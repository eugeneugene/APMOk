<Window
    x:Class="APMOk.DeviceStatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localcode="clr-namespace:APMOk.Code"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DeviceStatusWindow"
    Width="800"
    Height="450"
    x:ClassModifier="internal"
    Loaded="WindowLoaded"
    mc:Ignorable="d">
    <Window.Resources>
        <CollectionViewSource x:Key="DeviceStatusDataSource" CollectionViewType="ListCollectionView" />
        <CollectionViewSource x:Key="DiskInfoItemsSource" CollectionViewType="ListCollectionView" />
        <localcode:ACLineStatusConverter x:Key="ACLineStatusConverter" />
        <Style x:Key="ConnectionStatus" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ConnectFailure}" Value="true">
                    <Setter Property="Foreground" Value="Salmon" />
                    <Setter Property="Text" Value="OFFLINE!" />
                </DataTrigger>
                <DataTrigger Binding="{Binding ConnectFailure}" Value="false">
                    <Setter Property="Foreground" Value="MediumSpringGreen" />
                    <Setter Property="Text" Value="Online" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BatteryStatus" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding PowerState, Converter={StaticResource ACLineStatusConverter}}" Value="0">
                    <Setter Property="Foreground" Value="Salmon" />
                    <Setter Property="Text" Value="Battery" />
                </DataTrigger>
                <DataTrigger Binding="{Binding PowerState, Converter={StaticResource ACLineStatusConverter}}" Value="1">
                    <Setter Property="Foreground" Value="MediumSpringGreen" />
                    <Setter Property="Text" Value="Power" />
                </DataTrigger>
                <DataTrigger Binding="{Binding PowerState, Converter={StaticResource ACLineStatusConverter}}" Value="-1">
                    <Setter Property="Foreground" Value="DimGray" />
                    <Setter Property="Text" Value="Unknown" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxEnabler" TargetType="ComboBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ConnectFailure}" Value="true">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ConnectFailure}" Value="false">
                    <Setter Property="IsEnabled" Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DataGridEnabler" TargetType="DataGrid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ConnectFailure}" Value="true">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ConnectFailure}" Value="false">
                    <Setter Property="IsEnabled" Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            HorizontalContentAlignment="Center"
            Header="Select disk">
            <ComboBox
                x:Name="SelectDiskCombo"
                Height="22"
                Margin="5"
                HorizontalContentAlignment="Stretch"
                DataContext="{StaticResource DeviceStatusDataSource}"
                DisplayMemberPath="Caption"
                ItemsSource="{Binding}"
                SelectionChanged="SelectDiskComboSelectionChanged"
                Style="{StaticResource ComboBoxEnabler}" />
        </GroupBox>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="1,1,5,1"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1">
                <TextBlock
                    x:Name="ConnectionStatus"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Style="{StaticResource ConnectionStatus}" />
            </Border>
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Margin="1,1,5,1"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1">
                <TextBlock
                    x:Name="BatteryStatus"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Style="{StaticResource BatteryStatus}" />
            </Border>
        </Grid>
        <GroupBox
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="5"
            Header="Status">
            <DataGrid
                x:Name="DriveStatusGrid"
                Margin="5"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                CanUserSortColumns="False"
                DataContext="{StaticResource DiskInfoItemsSource}"
                ItemsSource="{Binding}"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                Style="{StaticResource DataGridEnabler}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        x:Name="Key"
                        Width="120"
                        Binding="{Binding Key}"
                        Header="Key"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        x:Name="Value"
                        Width="340"
                        Binding="{Binding Value}"
                        Header="Value"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
